<%= form_for :member, :url => { :action => "create_member", :controller=>"mainpage" } do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :realname %><br />
    <%= f.text_field :realname %>
  </div>
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.select :gender, Member::GENDER_TYPES, :prompt => "Please select a gender" %>
  </div>
  <div class="field">
    <%= f.label :date_of_birth %><br />
    <%= f.date_select :date_of_birth %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :qq %><br />
    <%= f.text_field :qq %>
  </div>
  <div class="field">
    <%= f.label :current_location %><br />
    <%= f.text_field :current_location %>
  </div>
  <div class="field">
    <%= f.label :resume_url %><br />
    <%= f.file_field :resume_url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
